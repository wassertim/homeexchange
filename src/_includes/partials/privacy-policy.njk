{% set currentContent = privacyContent[lang] or privacyContent.en %}

<div class="privacy-policy">
  <h1>{{ currentContent.title }}</h1>
  <p class="last-updated">{{ currentContent.lastUpdated }}</p>
  
  <section class="privacy-section">
    <h2>{{ currentContent.sections.introduction.title }}</h2>
    <p>{{ currentContent.sections.introduction.content }}</p>
  </section>
  
  <section class="privacy-section">
    <h2>{{ currentContent.sections.dataCollection.title }}</h2>
    <p>{{ currentContent.sections.dataCollection.content }}</p>
    <ul>
      {% for item in currentContent.sections.dataCollection.items %}
        <li>{{ item }}</li>
      {% endfor %}
    </ul>
  </section>
  
  <section class="privacy-section">
    <h2>{{ currentContent.sections.cookies.title }}</h2>
    <p>{{ currentContent.sections.cookies.content }}</p>
    <ul>
      {% for item in currentContent.sections.cookies.items %}
        <li>{{ item }}</li>
      {% endfor %}
    </ul>
    
    <div class="cookie-controls">
      <button type="button" id="manage-cookies" class="consent-btn consent-btn-customize">
        {% if lang == 'ru' %}Управление файлами cookie{% elif lang == 'de' %}Cookie-Einstellungen verwalten{% else %}Manage Cookie Settings{% endif %}
      </button>
    </div>
  </section>
  
  <section class="privacy-section">
    <h2>{{ currentContent.sections.rights.title }}</h2>
    <p>{{ currentContent.sections.rights.content }}</p>
    <ul>
      {% for item in currentContent.sections.rights.items %}
        <li>{{ item }}</li>
      {% endfor %}
    </ul>
  </section>
  
  <section class="privacy-section">
    <h2>{{ currentContent.sections.contact.title }}</h2>
    <p>{{ currentContent.sections.contact.content }}</p>
    <p>
      <strong>Email:</strong> {{ site.author.email }}<br>
      <strong>{% if lang == 'ru' %}Сайт{% elif lang == 'de' %}Website{% else %}Website{% endif %}:</strong> {{ site.url }}
    </p>
  </section>
</div>

<script>
  // Add event listener for cookie management button
  document.addEventListener('DOMContentLoaded', function() {
    const manageCookiesBtn = document.getElementById('manage-cookies');
    if (manageCookiesBtn && window.analytics) {
      manageCookiesBtn.addEventListener('click', function() {
        window.analytics.showConsentManager();
      });
    }
  });
</script>