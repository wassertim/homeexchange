<!DOCTYPE html>
<html lang="{{ lang or 'en' }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% if title %}{{ title }} | {% endif %}{{ site.title[lang] or site.title.en }}</title>
  <meta name="description" content="{{ description or site.description[lang] or site.description.en }}">
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Styles -->
  <link rel="stylesheet" href="{{ '/assets/css/main.css' | url }}">
  
  <!-- Favicon -->
  <link rel="icon" href="{{ '/assets/images/favicon.ico' | url }}">
  
  <!-- Meta tags -->
  <meta name="author" content="{{ site.author.name }}">
  <meta name="robots" content="index, follow">
  
  <!-- Open Graph -->
  <meta property="og:title" content="{% if title %}{{ title }} | {% endif %}{{ site.title[lang] or site.title.en }}">
  <meta property="og:description" content="{{ description or site.description[lang] or site.description.en }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary">
  <meta name="twitter:title" content="{% if title %}{{ title }} | {% endif %}{{ site.title[lang] or site.title.en }}">
  <meta name="twitter:description" content="{{ description or site.description[lang] or site.description.en }}">
</head>
<body>
  {% include "partials/header.njk" %}
  
  <main id="main-content" class="main-content">
    {{ content | safe }}
  </main>
  
  {% include "partials/footer.njk" %}
  
  <!-- Scripts -->
  <script src="{{ '/assets/js/main.js' | url }}"></script>
</body>
</html>